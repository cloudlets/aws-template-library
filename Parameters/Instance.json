{%- macro inst_params(name) -%}
"{{ name }}InstanceType" : {
    "Description" : "{{ name }} instance type",
    "Type" : "String",
    "Default" : "m1.small",
    "AllowedValues" : [ "t1.micro","m1.small","m1.medium","m1.large","m1.xlarge","m3.medium","m3.large","m3.xlarge","m3.2xlarge","c1.medium","c1.xlarge","c3.large","c3.xlarge","c3.2xlarge","c3.4xlarge","c3.8xlarge","cc2.8xlarge","m2.xlarge","m2.2xlarge","m2.4xlarge","cr1.8xlarge","hi1.4xlarge","hs1.8xlarge","i2.xlarge","i2.2xlarge","i2.4xlarge","i2.8xlarge","cg1.4xlarge","g2.2xlarge" ],
    "ConstraintDescription" : "must be a valid EC2 instance type"
},
"{{ name }}InstanceRole" : {
    "Description" : "{{ name }} instance role (for Puppet bootstrapping)",
    "Type" : "String",
    "Default" : ""
},
"{{ name }}InstanceVolumeSize" : {
    "Description" : "{{ name }} instance size of root EBS volume",
    "Type" : "Number",
    "Default" : "8"
},
"{{ name }}InstanceCount" : {
    "Description" : "Number of {{name}} instances to provision",
    "Type" : "Number",
    "Default" : "1"
}
{%- endmacro -%}
